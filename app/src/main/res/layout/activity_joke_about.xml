<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.JokeAboutActivity">

    <RadioGroup
        android:id="@+id/all_radio_group"
        android:layout_width="@dimen/all_width_zero"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintVertical_bias="0.1">

        <RadioButton
            android:id="@+id/radioButton_main_30_sec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/all_btn_30_sec"
            android:textSize="@dimen/all_text_size"
            android:checked="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.1"
            app:layout_constraintWidth_percent="0.3" />

        <RadioButton
            android:id="@+id/radioButton_main_1_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/all_btn_1_min"
            android:textSize="@dimen/all_text_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/radioButton_main_30_sec"
            app:layout_constraintWidth_percent="0.3" />

        <RadioButton
            android:id="@+id/radioButton_main_1_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/all_btn_1_hour"
            android:textSize="@dimen/all_text_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/radioButton_main_1_min"
            app:layout_constraintWidth_percent="0.3" />
    </RadioGroup>

    <EditText
        android:id="@+id/editText_main_first_name"
        android:layout_width="@dimen/all_width_zero"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/all_margin_medium"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:textSize="@dimen/all_text_size"
        android:autofillHints="no"
        android:hint="@string/all_hint_first_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintTop_toBottomOf="@+id/all_radio_group" />

    <EditText
        android:id="@+id/editText_main_last_name"
        android:layout_width="@dimen/all_width_zero"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/all_margin_medium"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:textSize="@dimen/all_text_size"
        android:autofillHints="no"
        android:hint="@string/all_hint_last_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintTop_toBottomOf="@+id/editText_main_first_name" />

    <Button
        android:id="@+id/button_main_save"
        android:layout_width="@dimen/all_width_zero"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/all_margin_large"
        android:text="@string/all_btn_save"
        android:textSize="@dimen/all_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintTop_toBottomOf="@+id/editText_main_last_name" />
</androidx.constraintlayout.widget.ConstraintLayout>